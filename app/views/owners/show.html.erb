<div class="container">
    <div class="row">
      <h2 class="text-center">Owner: <%= @owner.name.capitalize %></h2>
        <div class="col-md-6 col-md-offset-3">
          <div class="well">
              <br />
              <% if @owner.todos.count != 0 %>
              <p><span class="descriptionText">Assigned to:</span> <%= @owner.todos.count %> todos</p>
                <% else %>
                <h4>You are not assigned to any Todos yet..</h4>
                <% end %>
                <br />
            </div>
        </div>
    </div>
</div>
