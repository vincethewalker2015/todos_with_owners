<div class="container">
  <div class="row">
    <h1 align="center">Users</h1>
    <h3 align="center">I am: <%= current_user.name %> <%= "(Admin)" if current_user.admin? %></h3>
    <div align="center">
        <p>
            <%= link_to "Create a To Do", new_todo_path, class: "btn btn-success" %>
            <%= link_to "log Out", login_path, method: :delete, class: "btn btn-danger fancy" %>
            <%= link_to "Todo List", todos_path, class: "btn btn-primary" %>
            <%= link_to "My Profile", user_path(current_user), class: "btn btn-warning" %>
        </p>
          <div align="center">
            
            <% @users.each do |user| %>
             <div class ="col-md-4 col-md-offset-4 well profile-black-white-thin row" <%= cycle('profile-black-white-thin-b grad', '') %> > 
                <p class="descriptionText">Name: <%= user.name %></p>
                <p class = "descriptionText">Email: <%= user.email %></p>
              <% if logged_in? && current_user.admin? && !user.admin?  %>
                <p><%= link_to "Destroy Me", user_path(user), method: :delete,  data: {confirm: "Are you sure??"},  class: "btn btn-danger" %></p>
              <% end %>
              </div>
            <% end %>
          
        </div>
      </div>
    </div>
  </div>